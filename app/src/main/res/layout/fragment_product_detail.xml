<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_coffee">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Product Image Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Product image"
                    tools:src="@drawable/image/cappoccino"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Top overlay buttons -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/bg_round_button"
                    android:src="@android:drawable/ic_menu_revert"
                    android:tint="@color/white"
                    android:contentDescription="Back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/bg_round_button"
                    android:src="@android:drawable/btn_star_big_off"
                    android:tint="@color/white"
                    android:contentDescription="Favorite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Content Container with rounded top corners only -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                android:background="@drawable/bg_detail_content"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cappoccino"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_coffee"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="24dp"
                    tools:text="Cappoccino" />

                    <!-- Coffee Size Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coffee Size"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_coffee"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <!-- Size Selector -->
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/groupSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSmall"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Small"
                            android:textSize="15sp"
                            android:textColor="@color/size_button_text"
                            app:backgroundTint="@color/size_button_background"
                            app:strokeColor="@color/cream_beige"
                            app:strokeWidth="2dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMedium"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Medium"
                            android:textSize="15sp"
                            android:checked="true"
                            android:textColor="@color/size_button_text"
                            app:backgroundTint="@color/size_button_background"
                            app:strokeColor="@color/cream_beige"
                            app:strokeWidth="2dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLarge"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="Large"
                            android:textSize="15sp"
                            android:textColor="@color/size_button_text"
                            app:backgroundTint="@color/size_button_background"
                            app:strokeColor="@color/cream_beige"
                            app:strokeWidth="2dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <!-- Quantity and Rating Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <!-- Quantity Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qty."
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/dark_coffee"
                            android:layout_marginEnd="12dp" />

                        <!-- Quantity Control -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_quantity_control"
                            android:padding="4dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnDecrease"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="-"
                                android:textSize="18sp"
                                android:textColor="@color/dark_coffee"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="@color/white"
                                app:cornerRadius="8dp"
                                style="@style/Widget.Material3.Button.TextButton" />

                            <TextView
                                android:id="@+id/tvQuantity"
                                android:layout_width="48dp"
                                android:layout_height="36dp"
                                android:text="1"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_coffee"
                                android:gravity="center" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnIncrease"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="+"
                                android:textSize="18sp"
                                android:textColor="@color/dark_coffee"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="@color/white"
                                app:cornerRadius="8dp"
                                style="@style/Widget.Material3.Button.TextButton" />

                        </LinearLayout>

                        <!-- Spacer -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Rating -->
                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.9"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/dark_coffee"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/btn_star_big_on"
                            android:tint="@android:color/holo_orange_dark"
                            android:contentDescription="Rating star" />

                    </LinearLayout>

                    <!-- Description Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_coffee"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <!-- Description Text -->
                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Espresso is a concentrated form of coffee served in small, strong shots and is the base for many coffee drinks. It is made by forcing a small amount of nearly boiling water through finely-ground coffee beans under high pressure. The result is a rich, robust flavor with a thick, creamy layer on top called crema."
                        android:textSize="14sp"
                        android:textColor="@color/dark_coffee"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="80dp"
                        tools:text="@string/sample_description" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Add to Cart Section (Fixed at bottom) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/light_cream"
        app:cardElevation="8dp"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1.15"
                android:text="Add to cart"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/coffee_brown"
                app:cornerRadius="12dp"
                android:layout_marginEnd="20dp"
                style="@style/Widget.Material3.Button" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price"
                    android:textSize="12sp"
                    android:textColor="@color/gray_medium"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29,000đ"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/coffee_brown"
                    android:fontFamily="sans-serif-medium"
                    tools:text="29,000đ" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
